<header>
	<div class="header-container">
		<h1 class="fancy"><a href="./">Christine & Andy</a></h1>
		<div class="nav-wrapper">
			<nav>
				<ul>
				<li><a href="schedule.html">Schedule</a></li>
				<li><a href="accomodations.html">Accomodations</a></li>
				<li><a href="registry.html">Registry</a></li>
				<li class="rsvp-link"><a href="https://www.zola.com/wedding/metzgersims2022/rsvp" target="_blank">RSVP <i class="fas fa-external-link-alt"></i></a></li>
				</ul>          
			</nav>          
			<div class="mobile-menu-close-button"><i class="fas fa-times"></i></div>
		</div>
		<div class="mobile-menu"><i class="fas fa-bars"></i></div>
	</div>
</header>

<script>
	const nav = document.querySelector(".nav-wrapper");
	const body = document.querySelector("body");
	function openMenu() {
		nav.classList.add("menu-open");
		body.classList.add("menu-open");
	}
	function closeMenu() {
		nav.classList.remove("menu-open");
		body.classList.remove("menu-open");
	}
	const menuButton = document.querySelector(".mobile-menu");
	const closeButton = document.querySelector(".mobile-menu-close-button");
	menuButton.addEventListener("click", openMenu);
	closeButton.addEventListener("click", closeMenu);
</script>

<style lang="scss">
	$font-script: "Kaushan Script", cursive;
	$font-sans: "Open Sans", sans-serif;
	$color-main-red: #f68d6f;
	header {
		text-align: center;
		height: 4rem;
		margin-top: 0;
		position: relative;
		border-bottom: 1px solid #e2e4d6;
		@media (min-width: 481px) {
			height: 5rem;
		}
		@media (min-width: 650px) {
			height: 7rem;
		}
	}

	div.header-container {
		width: 100%;
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		line-height: 4rem;

		@media (min-width: 481px) {
			line-height: 5rem;
		}

		@media (min-width: 601px) {
			line-height: 1.5;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
		}

		.mobile-menu {
			display: block;
			position: absolute;
			top: .25rem;
			right: 1rem;
			i {
				font-size: 1.5rem;
			}
			@media (min-width: 481px) {
				top: .5rem;
					i {
						font-size: 1.5rem;
					}      
				}
			@media (min-width: 601px) {
				display: none;      
			}
		}
	}

	h1 {
		font-weight: 400;
		font-size: 1.5rem;
		margin: 0;
		a {
			text-decoration: none;
			color: #000;
			&:hover {
			text-decoration: none;
			transition: none;
			font-size: 2rem;
			color: #000;
			}
		}
		@media (min-width: 481px) {
			margin: 0 0 0.5rem 0;
			font-size: 2rem;
		}
	}

	header .nav-wrapper {
  /* mobile layout styles start here */
  display: none;  
  &.menu-open {
    display: block;
    position: absolute;
    top: 0;
    background-color: rgba(0, 0, 0, .75);
    width: 100vw;
    height: 100vh;
    margin: 0;
    padding: 0;
    z-index: 999;

    ul {
      box-sizing: border-box;
      width: 90%;
      margin: 0 auto 0 auto;
      background-color: #fff;
      list-style-type: none;
      padding: 5rem 0 0 0;
      height: 90vh;
      border-radius: 10px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);

      a {
        display: block;
      }

      li {
        line-height: 5rem;
        font-size: 1.5rem;

        &.rsvp-link {
          margin-top: 3rem;
          line-height: 3rem;
          position: static;
          background-color: $color-main-red;
          border-radius: 10px;
          width: 10rem;
          height: 3rem;
          margin-left: auto;
          margin-right: auto;
          a {
            display: block;
            margin: 0;
            padding: 0;
            color: #fff;
          }
        }
      }
      
      @media (min-width: 481px) {
        width: 66%;
      }
    }

    .mobile-menu-close-button {
      display: block;
      position: absolute;
      top: 5vh;
      right: 12%;
      font-size: 1.75rem;
      color: #777;

      @media (min-width: 481px) {
        right: 22.5%;
        height: 90vh;
      }
    }
  }

  /* desktop layout styles start here */
  @media (min-width: 601px) {
    display: block;
    ul {
      margin: 0 0 0 0;
      padding: 0;
    }

    li {
      list-style: none;
      display: inline-block;
      margin: 0;
      min-width: 5rem;
      font-size: 0.825rem;
      @media (min-width: 350px) {
        font-size: 1rem;
        min-width: 7rem;
      }

      a {
        text-decoration: none;
        color: #666;
        font-weight: 700;
        &:hover {
          color: #5f8575;
          transition: 250ms;
        }
      }

      &.rsvp-link {
        position: absolute;
        right: 2rem;
        transform: translateY(-33%);
        background-color: $color-main-red;
        padding: .25rem 0;
        border-radius: 10px;
        @media (min-width: 2000px) {
          right: 15rem;
        }
        a {
          display: block;
          color: #fff;
        }
        &:hover {
          opacity: .8;
          transition: 250ms;
        }
      }
    }
  }

  .mobile-menu-close-button {
    display: none;
  }
}
</style>