---
import { Picture } from '@astrojs/image/components';
import hero from '../img/hero.jpg';
---
<div class="hero-container">
    <Picture class="hero-image" src={hero} 
                widths={[480, 769, 1200, 1921]} 
              sizes="(max-width:480px) 480px, (min-width:481px) 769px, (min-width:769px) 1200px, (min-width:1200px) 1921px" 
              alt="Christine & Andy" />
    <span class="hero-date">6 &bull; 4 &bull; 22</span>
</div>

<style lang="scss">
    .hero-container {
        width: 100%;
        position: relative;
        z-index: -1;

    .hero-image {
        width: 100%;
        height: auto;
        max-height: calc(100vh - 10rem);
        object-fit: cover;
        object-position: right 50%;
    }

    .hero-date {
        position: absolute;
        bottom: 1rem;
        left: 50%;
        transform: translateX(-50%);
        color: #fff;
        font-size: 2rem;
        font-weight: 900;

        @media (min-width: 350px) {
            font-size: 2rem;
        }

        @media (min-width: 480px) {
            bottom: 2rem;
        }

        @media (min-width: 768px) {
            font-size: 3rem;
        }

        @media (min-width: 2000px) {
            font-size: 7rem;
        }
  }
}
</style>